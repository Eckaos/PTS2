        <rowConstraints>
          <RowConstraints minHeight="80.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="640.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="averageNumberOfWord" text="Mots" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <Label fx:id="instruction" text="Label">
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="completeText" alignment="TOP_LEFT" prefHeight="640.0" prefWidth="360.0" text="Texte complet" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
            </Label>
            <Label fx:id="reconstructedText" alignment="TOP_LEFT" prefHeight="640.0" prefWidth="360.0" text="Texte reconstittuÃ©" GridPane.columnIndex="2" GridPane.rowIndex="1" />
